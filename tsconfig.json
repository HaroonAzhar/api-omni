{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": [
            "@types/jest",
            "node",
            "long"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@v2/*": ["src/v2/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}
